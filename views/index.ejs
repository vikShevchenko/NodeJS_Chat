<div class="author">
    <h1 class="author__heading">Hi, I am Viktor.</h1>
    <p class="author__body">Frontend Developer.</p>

</div>
<img src="/img/hero-image.jpg" alt="photo face" class="hero-image">

<section class="article">
    <h2 class="articles__heading">Mastering Technology</h2>

    <ul class="article-ul">

        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id  %>">
                    <span class="article-list__title">
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>
    <% if (nextPage !==null){ %>

        <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
        <%} %>

</section>